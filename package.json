{
  "name": "@sudobility/building_blocks_rn",
  "version": "0.0.8",
  "description": "Higher-level shared UI building blocks for Sudobility React Native apps",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./firebase": {
      "import": "./dist/firebase.js",
      "require": "./dist/firebase.js",
      "types": "./dist/firebase.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests configured yet'",
    "lint": "eslint . --ext ts,tsx --ignore-pattern 'dist' --ignore-pattern 'node_modules' --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --ignore-pattern 'dist' --ignore-pattern 'node_modules' --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-native": ">=0.72.0",
    "react-native-safe-area-context": ">=4.0.0",
    "@react-navigation/native": ">=7.0.0",
    "@react-navigation/native-stack": ">=7.0.0",
    "i18next": "^23.0.0 || ^24.0.0 || ^25.0.0",
    "react-i18next": "^14.0.0 || ^15.0.0 || ^16.0.0",
    "@react-native-async-storage/async-storage": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "firebase": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    },
    "react-native-purchases": {
      "optional": true
    },
    "react-native-localize": {
      "optional": true
    },
    "react-native-gesture-handler": {
      "optional": true
    },
    "@sudobility/types": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "prettier": "^3.6.2",
    "@types/react": "~19.1.0",
    "typescript": "~5.9.2",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/native-stack": "^7.10.1",
    "@react-native-async-storage/async-storage": "2.2.0",
    "i18next": "^25.8.0",
    "react-i18next": "^16.5.3",
    "@tanstack/react-query": "^5.90.19",
    "@sudobility/types": "^1.9.53"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "BUSL-1.1"
}
